<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TSPCart" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tan</item>
        <item name="colorPrimaryVariant">@color/darkTan</item>
        <item name="colorOnPrimary">@color/wheat</item>
        <!-- background brand color-->
        <item name="background">@color/white</item>
        <item name="colorOnBackground">@color/tan</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkTan</item>
        <item name="colorOnSecondary">@color/wheat</item>
        <!-- Surface brand color. -->
        <item name="colorSurface">@color/mistyRose</item>
        <item name="colorOnSurface">@color/tan</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="appBarLayoutStyle">
            @style/Widget.MaterialComponent.AppBarLayout.TSPAppBarLayout
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

    </style>
</resources>