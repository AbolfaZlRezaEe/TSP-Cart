<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Appbar Style -->
    <style name="Widget.MaterialComponent.AppBarLayout.TSPAppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/tan</item>
    </style>

    <!-- EditText Style -->
    <style name="Widget.AppCompat.EditText.TSP" parent="android:Widget.EditText">
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/bisque</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/tan</item>
        <item name="android:background">@drawable/background_search_edit_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Buttons Style -->
    <style name="Widget.MaterialComponent.Button.TSP" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/bisque</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/tan</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">9dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.MaterialComponent.OutlinedButton.TSP" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="strokeColor">@color/bisque</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/bisque</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">9dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="Widget.MaterialComponent.TextButton.TSP" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/bisque</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>