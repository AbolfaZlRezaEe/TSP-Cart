<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Appbar Style -->
    <style name="Widget.MaterialComponent.AppBarLayout.TSPAppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/white</item>
    </style>

    <!-- EditText Style -->

    <style name="Widget.AppCompat.EditText.TSP" parent="android:Widget.EditText">
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/darkTan</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/tan</item>
        <item name="android:background">@drawable/background_tsp_edit_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>